{
  "manifest_version": 3,
  "name": "MagicBuyer-UT",
  "version": "2.0.0",
  "description": "UT Auto Buyer - French version",
  "action": { "default_popup": "popup.html" },
  "background": { "service_worker": "background.js" },
  "content_scripts": [
    {
      "matches": ["https://www.ea.com/*"],
      "include_globs": ["*ea-sports-fc/ultimate-team/web-app/*"],
      "js": ["contentScript.js"],
      "run_at": "document_idle"
    }
  ],
  "permissions": [
    "storage"              
  ],
  "host_permissions": [
    "https://www.ea.com/*",
    "https://www.ea2.com/*",
    "https://futbin.com/*",
    "https://futwiz.com/*",
    "https://discordapp.com/*",
    "https://futbin.org/*",
    "https://exp.host/*"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "dist/magicbuyer.js",
        "external/discord.11.4.2.min.js",
        "dist/page.bundle.js"            
      ],
      "matches": ["https://www.ea.com/*"]
    }
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  }
}
